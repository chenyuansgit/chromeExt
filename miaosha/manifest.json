{
  "manifest_version": 2,
  "name": "淘宝秒杀",
  "description": "自动提交订单",
  "version": "1.0",
  "background": {
    "persistent": true,
    "scripts": [
      "include/JSONC-1.6.1.js",
      "include/util.js",
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": ["inject/detail.taobao.js"],
      "matches": [
        "*://detail.tmall.com/*",
        "*://detail.taobao.com/*"
      ],
      "run_at": "document_end"
    },
    {
      "js": ["inject/buy.taobao.js"],
      "matches": [
        "*://buy.tmall.com/*",
        "*://buy.taobao.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_title": "淘宝秒杀",
    "default_icon": "img/icon128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/icon128.png",
    "16": "img/icon16.png",
    "48": "img/icon48.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "downloads",
    "<all_urls>",
    "https://*/*",
    "http://*/*",
    "storage"
  ]
}